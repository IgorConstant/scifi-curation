{
  "name": "scifi-curation",
  "version": "1.0.0",
  "description": "API pública GraphQL de curadoria de obras de ficção científica (filmes, séries, jogos e livros) usando Prisma + SQLite.",
  "homepage": "https://github.com/IgorConstant/scifi-curation#readme",
  "bugs": {
    "url": "https://github.com/IgorConstant/scifi-curation/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IgorConstant/scifi-curation.git"
  },
  "license": "ISC",
  "author": "Igor Constant",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "seed": "node src/seed.js",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev --name init",
    "prisma:studio": "npx prisma studio",
    "publish-schema": "rover subgraph publish scifi-curation@current --name=api --schema ./src/schema/typeDefs.js"
  },
  "dependencies": {
    "@prisma/client": "^5.21.0",
    "apollo-server-express": "^3.13.0",
    "apollo-server-core": "^3.13.0",
    "express": "^4.21.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express-rate-limit": "^7.3.0"
  },
  "devDependencies": {
    "prisma": "^5.21.0",
    "nodemon": "^3.1.4",
    "eslint": "^9.10.0",
    "@apollo/rover": "^0.24.0"
  },
  "engines": {
    "node": ">=18"
  }
}
